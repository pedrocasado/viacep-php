{
    "name": "pedrocasado/viacep-php",
    "type": "library",
    "description": "ViaCEP PHP SDK",
    "keywords": [
        "pedrocasado",
        "viacep",
        "cep",
        "brazil",
        "zipcode",
        "address",
        "enderecos"
    ],
    "homepage": "https://github.com/pedrocasado/viacep-php",
    "license": "MIT",
    "authors": [
        {
            "homepage": "https://github.com/pedrocasado",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "guzzlehttp/guzzle": "~6.2"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "0.3.*",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0||~5.0",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "pedrocasado\\ViaCEP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pedrocasado\\ViaCEP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
